package project1;

import java.util.Arrays;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) throws CloneNotSupportedException {
		Scanner s = new Scanner (System.in);
		System.out.println("how many elements");
		int size = s.nextInt();
		
		LivingThing[] arr = new LivingThing[size];
		
		for(int i = 0; i<arr.length; i++) {
			System.out.println("enter 1 for chita, 2 for athlete, 3 for thief");
			int choice = s.nextInt();
			
			switch(choice) {
			case 1: 
				arr[i] = new Chita ("chittie", 0.8, 67);
				break;
				
			case 2:
				arr[i] = new Athlete ("Rani", 12.6);
				break;
				
			case 3:
				arr[i] = new Thief ("Gogo", 1.78 , (int)(Math.random()*30));
				break;
			}
		}
		
		for (int i =0; i<arr.length; i++) {
			System.out.println(arr[i]);
			if (arr[i] instanceof Stealable) {
				((Stealable)arr[i]).toSteal();
			}
			
			if (arr[i] instanceof Runnable) {
				((Runnable)arr[i]).toRun();
			}
		}
		
		LivingThing[] dupArr = new LivingThing[arr.length];
		
		for(int i=0;i<arr.length; i++) {
			dupArr[i]= arr[i].clone();
		}
		
		System.out.println("the dupArr is: ");
		for(int i=0;i<dupArr.length; i++) {
			System.out.println(dupArr[i]);
		}
		
		
		int counterBreathable = 0, counterAthelete =0 , counterThiefes = 0;
		
		for(int i=0;i<arr.length; i++) {
			if(arr[i] instanceof Breathable) {
				counterBreathable++;
			}
			if(arr[i] instanceof Athlete) {
				counterAthelete++;
			}
			if(arr[i] instanceof Thief) {
				counterThiefes++;
			}
		}
		
		Breathable[] breathArr = new Breathable[counterBreathable];
		for(int i=0,j=0 ;i<arr.length; i++) {
			if(arr[i] instanceof Breathable) {
				breathArr[j++]= (Breathable)arr[i].clone();
			}
		}
		System.out.println("Duplicate those who breath: ");
		for(int i=0 ;i<breathArr.length; i++) {
			System.out.println(breathArr[i]);
		}
		
		
		Athlete[] AthleteArr = new Athlete[counterAthelete];
		for(int i=0,j=0 ;i<arr.length; i++) {
			if(arr[i] instanceof Athlete) {
				AthleteArr[j++]= (Athlete)arr[i].clone();
			}
		}
		Arrays.sort(AthleteArr);
		System.out.println("the sorted runners: " + Arrays.toString(AthleteArr));
		
		Thief[] thiefArr = new Thief[counterThiefes];
		for(int i=0,j=0 ;i<arr.length; i++) {
			if(arr[i] instanceof Thief) {
				thiefArr[j++]= (Thief)arr[i].clone();
			}
		}
		Arrays.sort(thiefArr, new CompareThiefByHeight());
		System.out.println("the sorted theifs by height: " + Arrays.toString(thiefArr));
		
		Arrays.sort(thiefArr, new CompareThiefByNumOfArrests());
		System.out.println("the sorted theifs by numofArreests: " + Arrays.toString(thiefArr));

	}
}
