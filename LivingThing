package project1;

public abstract class LivingThing implements Cloneable{
	protected String name;
	
	public LivingThing(String name) {
		this.name = name;
	}
	
	public String toString() {
		return (getClass().getSimpleName() + ">> " + "name: " + name);
	}

	@Override
	public LivingThing clone() throws CloneNotSupportedException {
		return (LivingThing)super.clone();
	}
	
}
__________________________________________________________________________________________________________________________________________

package project1;

public class Athlete extends LivingThing implements Runnable, Breathable, Cloneable , Comparable <Athlete>{
	private double averageRunSpeed;
	
	public Athlete (String name, double averageRunSpeed) {
		super(name);
		this.averageRunSpeed = averageRunSpeed;
	}
	public void toRun() {
		System.out.println("the " + getClass().getSimpleName() + " " + name +" is running");
	}
		
	public void toBreath() {
		System.out.println("the " + getClass().getSimpleName() + " " +  name + " is breathing");
	}
	
	public String toString() {
		return super.toString() + " averageRunSpeed is: " + averageRunSpeed ;
	}
	
	public Athlete clone() throws CloneNotSupportedException {
		return (Athlete)super.clone();
	}
	@Override
	public int compareTo(Athlete o) {
		return this.name.compareTo(o.name);
	}
	
}
