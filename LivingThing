package project1;

public class Chita extends LivingThing implements Runnable, Cloneable{
	private double height;
	private int numOfAnimalsCaptured;
	
	public Chita(String name, double height, int numOfAnimalsCaptured) {
		super(name);
		this.height = height;
		this.numOfAnimalsCaptured = numOfAnimalsCaptured;
	}
	
	public void toRun() {
		System.out.println("the " + getClass().getSimpleName() + " " +  name + " is running");
	}
	
	public String toString() {
		return super.toString() + " height is: " + height + " numOfAnimalsCaptured is "+ numOfAnimalsCaptured;
	}
	
	public Chita clone() throws CloneNotSupportedException {
		return (Chita)super.clone();
	}
		
}
