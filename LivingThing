package project1;

public class Thief extends LivingThing  implements Stealable, Runnable , Cloneable{
	private double height;
	private int numOfArrests;
	
	public Thief (String name, double height, int numOfArrests) {
		super(name);
		setHeight(height);
		setNumOfArrests(numOfArrests);
	}
	
	public int getNumOfArrests() {
		return numOfArrests;
	}

	public void setNumOfArrests(int numOfArrests) {
		this.numOfArrests = numOfArrests;
	}

	public double getHeight() {
		return height;
	}

	public void setHeight(double height) {
		this.height = height;
	}
	
	
	public void toSteal() {
		System.out.println("the " + getClass().getSimpleName() + " " + name + " is stealing");
	}
	
	public void toRun() {
		System.out.println("the " + getClass().getSimpleName() + " " + name + " is running");
	}
	
	public String toString() {
		return super.toString() + " height is: " + getHeight() + " numofArrests is "+ getNumOfArrests();
	}
	
	public boolean equals(Object other) {
			if(!(other instanceof Thief)) {
				return false;
			}
			
			Thief t = (Thief)other;
			return this.getHeight() == t.getHeight() && this.getNumOfArrests() == t.getNumOfArrests() && this.name.equals(t.name);
	}
	
	public Thief clone() throws CloneNotSupportedException {
		return (Thief)super.clone();
	}
	
}

__________________________________________________________________________________________________________________________________________
package project1;

import java.util.Comparator;

public class CompareThiefByHeight implements Comparator <Thief> {

	@Override
	public int compare(Thief o1, Thief o2) {
		if(o1.getHeight() > o2.getHeight()) {
			return 1;
		}
		else if (o1.getHeight() < o2.getHeight()) {
			return -1;
		}
		else {
			return 0;	
		}
	}

}
__________________________________________________________________________________________________________________________________________

package project1;

import java.util.Comparator;

public class CompareThiefByNumOfArrests implements Comparator <Thief>{
	
	@Override
	public int compare(Thief o1, Thief o2) {
		if(o1.getNumOfArrests() > o2.getNumOfArrests()) {
			return 1;
		}
		else if (o1.getNumOfArrests() < o2.getNumOfArrests()) {
			return -1;
		}
		else {
			return 0;	
		}
}
}
